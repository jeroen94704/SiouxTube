<Window x:Class="SiouxTube.FakeMailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fake a Mail" Height="300" Width="300" Closed="Window_Closed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="215*" />
            <RowDefinition Height="46*" />
        </Grid.RowDefinitions>
        <Button Content="Receive" Grid.Row="1" Height="23" HorizontalAlignment="Right" Margin="0,0,10,0" Name="ReceiveButton" VerticalAlignment="Center" Width="75" Click="ReceiveButton_Click" />
        <TextBox Name="MailBox" AcceptsReturn="True" Margin="10" />
    </Grid>
</Window>
